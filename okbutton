// @updateURL    https://github.com/alialtay44/alialtay-s-repository/blob/main/villwin.js
// ==/UserScript==
(function () {
    'use strict';
    const targetLetter = 'OK';
    function checkAndClick() {
        const buttons = Array.from(document.querySelectorAll('div[tabindex="0"]'));
        buttons.forEach((button) => {
            const letterElement = button.querySelector('div[dir="auto"]');
            if (letterElement && letterElement.textContent.trim() === targetLetter) {
                button.click();
            }
        });
    }
    setInterval(checkAndClick, 1000);
})();
